{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@cli/*": ["src/cli/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["src/cli/main.ts"]
}
